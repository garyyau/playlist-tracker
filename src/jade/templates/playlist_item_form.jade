form.playlist-item-form
	mui-input(
		ng-model='PlaylistItemFormService.name',
		label='Name',
		float-label,
		required
	)
	mui-input(
		ng-model='PlaylistItemFormService.url',
		label='URL',
		float-label,
		required
	)
	.matxd-parser
		mui-checkbox.matxd-parser-toggle(ng-model='hasSeason', label='Season')
		span.matxd-parser-text(ng-bind='PlaylistItemFormService.url', ng-if='hasSeason')

	input(type='hidden', ng-model='PlaylistItemFormService.id')

	.form-controls
		mui-button(
			ng-click='clear()',
			variant='flat',
			size='small'
		) Clear
		mui-button(
			ng-click='save()',
			color='primary',
			variant='raised',
			size='small'
		) Save
